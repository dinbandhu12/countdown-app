<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextDateTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Date and Time (MM/DD/YYYY)"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:inputType="datetime"
        android:importantForAccessibility="yes"
        android:contentDescription="Enter date and time in the format MM/DD/YYYY HH:MM"/>

    <Button
        android:id="@+id/startCountdownButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Countdown"
        android:layout_below="@id/editTextDateTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="Start the countdown"/>

    <ListView
        android:id="@+id/countdownListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/startCountdownButton"
        android:layout_marginTop="16dp"
        android:importantForAccessibility="yes"
        android:contentDescription="List of countdown timers"
        />

</RelativeLayout>